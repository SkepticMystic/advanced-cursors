{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["svelte", "node"],
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["es2021"],
    "paths": {
      "src": ["src/*"]
    }
  },
  "include": ["src/**/*", "src/*", "**/*.ts"],
  "exclude": ["node_modules/*"]
}
